@using EducateMe.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(this.User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей, @this.User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                <button type="submit" class="nav-link btn btn-danger text-white">Излез</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mx-3">
            <a class="nav-link text-dark btn btn-secondary text-white" asp-area="Identity" asp-page="/Account/RegisterButtons">Регистрирай</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-success text-white" asp-area="Identity" asp-page="/Account/Login">Влез</a>
        </li>
    }
</ul>
